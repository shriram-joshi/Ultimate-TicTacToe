<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityPlayOnline"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/main_activity_po_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wooden_background"
        android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/leave_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_leave"
                android:background="@android:color/transparent"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/turn_round_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_template">

                        <TextView
                            android:id="@+id/turn_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Turn: "
                            android:textSize="20sp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/turn_tv"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:hint="player name"
                            android:gravity="center_vertical"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/round_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Round: "
                            android:textSize="20sp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/round_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_weight="2"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/next_round_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/cambay"
                        android:text="Next Round"
                        android:textColor="@color/white"
                        android:background="@drawable/border_template"
                        android:visibility="gone"
                        android:layout_margin="5dp"/>

                    <LinearLayout
                        android:id="@+id/board_background"
                        android:layout_width="328dp"
                        android:layout_height="328dp"
                        android:orientation="vertical"
                        android:background="@drawable/board_background_template_wooden">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="10dp">

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:background="@android:color/transparent"
                                android:id="@+id/b11" />

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:id="@+id/b12"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"/>

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:id="@+id/b13"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="10dp">

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:background="@android:color/transparent"
                                android:id="@+id/b21" />

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:id="@+id/b22"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"/>

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:id="@+id/b23"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:orientation="horizontal"
                            android:layout_margin="10dp">

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:background="@android:color/transparent"
                                android:id="@+id/b31" />

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:id="@+id/b32"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"/>

                            <Button
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:textSize="56sp"
                                android:textColor="@color/black"
                                android:id="@+id/b33"
                                android:background="@android:color/transparent"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/score_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scores:"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/cambay"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:id="@+id/scores_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:background="@drawable/border_template"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/you_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/you_text"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:layout_marginHorizontal="2dp"/>

                            <TextView
                                android:id="@+id/my_score_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="36sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/draws_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Draws"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:layout_marginHorizontal="2dp" />

                            <TextView
                                android:id="@+id/draw_score_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="36sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/opponents_name_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Opponent"
                                android:textColorHint="@color/hint_light"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:maxLines="1"
                                android:paddingHorizontal="5dp"
                                android:layout_marginHorizontal="2dp"/>

                            <TextView
                                android:id="@+id/opponents_score_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="36sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/game_starts_with_x"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:fontFamily="@font/cambay"
                        android:padding="10dp"
                        android:id="@+id/msg"
                        android:background="@drawable/border_template"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

</FrameLayout>