<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartGameActivity">

    <ImageView
        android:id="@+id/start_game_activity_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wooden_background"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shriram_joshi"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/board_background"
            android:layout_width="328dp"
            android:layout_height="328dp"
            android:src="@drawable/background_with_text_wooden"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/play_online_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_template"
                android:fontFamily="@font/cambay"
                android:text="@string/play_with_a_friend"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingHorizontal="10dp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/pass_and_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass_and_play"
                android:textColor="@color/white"
                android:fontFamily="@font/cambay"
                android:background="@drawable/border_template"
                android:paddingTop="10dp"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/how_to_play_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_to_play"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/cambay"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:background="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

</FrameLayout>