<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/popup_shape"
    android:backgroundTint="#544de6">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <EditText
        android:id="@+id/start_game_code_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:hint="Code"
        android:fontFamily="@font/cambay"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="number"
        android:maxLength="4"
        android:layout_marginHorizontal="10sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/show_to_friends_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_this_code_prompt_2"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginHorizontal="10dp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <Button
            android:id="@+id/create_hosting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:background="@drawable/border_template"
            android:backgroundTint="#5450A0"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/cancel_hosting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:background="@drawable/border_template"
            android:backgroundTint="#5450A0"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>